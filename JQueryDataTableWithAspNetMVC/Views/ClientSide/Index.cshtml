@{
    ViewBag.Title = "Client Side Processing";
}

<style>
    .dataTables_filter {
        display: none;
    }

    .actions input {
        visibility: hidden;
        pointer-events: none;
    }
</style>

<div class="col-md-12">
    <h3>List | Employee (Client Side Processing) </h3>
    @Html.ActionLink("Create", "Create","Employees", new {@class = "btn btn-default"})
    <hr />
</div>

<div class="container" style="overflow-x:auto">
    <table id="myTable" class="table table-hover table-striped table-bordered" cellspacing="0">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Age</th>
                <th>Gender</th>
                <th>CreatedOn</th>
                <th class="actions">Actions</th>
            </tr>
            <tr>
                <th>Employee Name</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Age</th>
                <th>Gender</th>
                <th>CreatedOn</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Employee Name</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Age</th>
                <th>Gender</th>
                <th>CreatedOn</th>
                <th>Actions</th>
            </tr>
        </tfoot>
    </table>
</div>

@section Scripts{
    <script>
        
        $(document).ready(function () {

            // Setup - add a text input to each header cell
            $('#myTable thead tr:eq(0) th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Search ' + title + '" />');
            });

            //Initialize the datatable

            var table = $('#myTable').DataTable({

                //Fixed Column Configuration Start
                "scrollX": true,
                "fixedColumns": {
                    leftColumns: 1,
                    rightColumns: 1
                },
                //Fixed Column Configuration End

                //Setting Page Sizes for Pagination
                "lengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]],

                "ajax": {
                    "url": "/ClientSide/LoadData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    {
                        "data": "EmployeeName",
                        "autoWidth": true,
                        "render": function (data, type, row, meta) {
                            return '<a href="/ClientSide/Details/' + row.EmployeeId + '">' + data + '</a>';
                        }
                    },
                    { "data": "DepartmentName", "autoWidth": true },
                    { "data": "Designation", "autoWidth": true },
                    { "data": "Age", "autoWidth": true },
                    { "data": "Gender", "autoWidth": true },
                    {
                        "data": "CreatedOn",
                        "autoWidth": true,
                        "render": function (data) {
                            var dateString = data.substr(6);
                            var currentTime = new Date(parseInt(dateString));
                            var month = currentTime.getMonth() + 1;
                            var day = currentTime.getDate();
                            var year = currentTime.getFullYear();
                            var hour = currentTime.getHours();
                            var minute = currentTime.getMinutes();
                            var seconds = currentTime.getSeconds();

                            var localStandarHour = hour > 12 ? hour - 12 : hour;

                            var time = (localStandarHour.toString().length > 1 ? localStandarHour : "0" + localStandarHour) + ":" + (minute.toString().length > 1 ? minute : "0" + minute) + ":"
                                + (seconds.toString().length > 1 ? seconds : "0" + seconds);


                            if (hour > 12) {
                                time = time + " PM";
                            } else {
                                time = time + " AM";
                            }


                            return (day.toString().length > 1 ? day : "0" + day) +
                                "/" +
                                (month.toString().length > 1 ? month : "0" + month) +
                                "/" +
                                year + " " + time;

                        }


                    },
                    {
                        "data": "EmployeeId",
                        "bSearchable": false,
                        "bSortable": false,
                        "render": function (data, type, row, meta) {

                            return '<a href="/ClientSide/Details/' + row.EmployeeId + '">Details</a>' + ' | ' +
                                '<a href="/ClientSide/Edit/' + row.EmployeeId + '">Edit</a>' + ' | ' +
                                '<a href="/ClientSide/Delete/' + row.EmployeeId + '">Delete</a>';
                        }
                    }
                ]
            });

            // Apply the search(If there is no fixed Column)

            //table.columns().every(function (index) {
            //    $('#myTable thead tr:eq(0) th:eq(' + index + ') input').on('keyup change', function () {
            //        table.column($(this).parent().index() + ':visible')
            //            .search(this.value)
            //            .draw();
            //    });
            //});

            // Individual Column Searching In case of Some Fixed Column
            $(table.table().container()).on('keyup', 'thead input', function () {
                table.column($(this).parent().index() + ':visible')
                        .search(this.value)
                       .draw();
            });
           

        });
    </script>
}
